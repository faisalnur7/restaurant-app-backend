<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Do not rewrite API or storage requests
    RewriteCond %{REQUEST_URI} ^/api/ [NC,OR]
    RewriteCond %{REQUEST_URI} ^/storage/ [NC,OR]
    RewriteCond %{REQUEST_URI} ^/assets/ [NC]
    RewriteRule ^ - [L]

    # Serve existing files
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # React SPA: redirect all unknown routes inside /dist to index.html
    RewriteCond %{REQUEST_URI} !^/dist/index\.html$
    RewriteRule ^dist/ /dist/index.html [L]

    # Default: send other requests to Laravel
    RewriteRule ^ index.php [L]
</IfModule>
